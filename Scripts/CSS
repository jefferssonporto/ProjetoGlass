/* Formatação do Menu */

nav#menu {
    display: block;
}

/* Tudo que for nav#menu e for ul*/
nav#menu ul{
    list-style: none;
    text-transform: uppercase;
    position: absolute;
    top: -20px;
    left: 300px;
}

/* Tudo que for nav#menu e for li lista */
nav#menu li{ 
    display: inline-block;
    background-color: #dddddd;
    padding: 10px;
    margin: 2px;
    transition: background-color 1s; /*tempo que demora para realizar a transição para mudança de cor definido no li:hover*/
}


nav#menu li:hover { /*ao passar o mouse causa uma interação*/
    background-color: #606060; /* no caso a interação é a mudança de cor do fundo com o background-color*/
}

/*deixar o hover sublinhado ao passar o mouse */
a:hover{
    text-decoration: underline;
}

/*configuração dos Links Ancora*/

nav#menu a { 
    color:#000000; /* cor preta */
    text-decoration: none; /*tirar o sublinhado*/ 
    
}

nav#menu a:hover { /*configuração da Tag hover */
    color: #ffffff; /* quando passar o mouse por cima muda a cor, no caso branco*/ 
    text-decoration: underline; /* quando passar o mouse por cima fica sublinhado */ 
}  

nav#menu h1 {
    display: none;
}


